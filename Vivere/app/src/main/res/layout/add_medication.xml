<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:text="Medication Name"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/medication_name"
        android:layout_weight="2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:text="Treatment Duration (in days)"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/medication_duration"
        android:layout_weight="2" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:text="Taking Frequency (times per day)"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/medication_frequency"
        android:layout_weight="2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:text="Dose (per taking time)"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/medication_dose"
        android:layout_weight="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_weight="2">
    <TextView
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:text="Cancel"
        android:id="@+id/medic_cancel"
        android:gravity="center"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:textSize="18dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:id="@+id/medic_add"
        android:padding="20dp"
        android:text="Add"
        android:gravity="center"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:textSize="18dp"
        android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>