<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:textSize="18dp"
        android:background="@color/colorPrimary"
        android:padding="15dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:text="Select type "/>


    <RadioGroup
        android:id="@+id/habitRadio"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:orientation="horizontal"
        android:layout_weight="2">

        <RadioButton
            android:text="Gain"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            android:id="@+id/radioButtonGain" />

        <RadioButton
            android:text="Break"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textSize="25dp"
            android:id="@+id/radioButtonBreak"
            android:checked="true"/>

    </RadioGroup>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:textSize="18dp"
        android:background="@color/colorPrimary"
        android:padding="15dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:text="What Habit do you wish to break/gain? "/>

    <EditText
        android:id="@+id/addHabitEditText"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:textSize="18dp"
        android:text="Type habit here"
        android:textColor="#c1000000"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/letsDoThisBtn"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:text="LETS DO THIS!"/>

    </LinearLayout>


</LinearLayout>